<!DOCTYPE html>
<html lang="en">
  <% include header %>
  
  <body>
    <% include variables %>
    <script type="text/javascript">
      pageDetails = <%- JSON.stringify(pageDetails) %>;
    </script>

    <% include navbar %>
    
    <div class="main-row">
      <div id="content-placeholder"></div>
    </div>

    <% include footer %>

    <script id="page-settings-template" type="text/x-handlebars-template">
      <div class="col-xs-2 col-lg-1" style="padding-bottom:100px;"></div>
      <div id="settings" class="col-xs-10 col-lg-10" style="padding-bottom:100px;">
        <div class="col-md-3"></div>
        <div class="col-md-6">
        <div class="well well-lg">
        <form class="form-horizontal" role="form">
          <div class="form-group">
            <label for="inputTitle" class="col-sm-2 control-label">Title</label>
            <div class="col-sm-10">
              <div class="input-group">
                <div class="right-inner-addon ">
                  <input type="text" class="form-control" id="inputTitle" value="{{page.name}}">
                </div>
                <span class="input-group-btn" style="padding-bottom: 5px;">
                  <button class="btn btn-default" type="submit">Update</button>
                </span>
              </div>
            </div>
          </div>
        </form>
        <form class="form-horizontal" role="form">
          <div class="form-group">
            <label for="inputParent" class="col-sm-2 control-label">Parent</label>
            <div class="col-sm-10">
              <div class="input-group">
                <div class="right-inner-addon ">
                  <input type="text" class="form-control" id="inputParent" value="{{lastAncestorName}}">
                </div>
                <span class="input-group-btn" style="padding-bottom: 5px;">
                  <button class="btn btn-default" type="button">Update</button>
                </span>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Share</label>
            <div class="col-sm-10">
              <div class="input-group">
                <select id="select-member" placeholder="User or Group..."></select>
                <span class="input-group-btn" style="padding-bottom: 5px;">
                  <button class="btn btn-default" type="button">Add</button>
                </span>
              </div>
            </div>
          </div>
        </form>
        </div></div>
        <div class="col-md-12">
          <h3>Permissions</h3>
          <table class="table table-hover">
            <tr>
              <th>Name</th>
              <th>Type</th>
              <th>Role</th>
              <th>Remove?</th>
            </tr>
            {{#each pageData.users}}
            <tr>
              <td>{{name}}</td>
              <td>{{type}}</td>
              <td style="padding: 0px;">
                <select class="form-control">
                  {{#ifEqual role "Owner"}}
                  <option selected>Owner</option>
                  {{else}}
                  <option>Owner</option>
                  {{/ifEqual}}
                  {{#ifEqual role "Manager"}}
                  <option selected>Manager</option>
                  {{else}}
                  <option>Manager</option>
                  {{/ifEqual}}
                  {{#ifEqual role "Editor"}}
                  <option selected>Editor</option>
                  {{else}}
                  <option>Editor</option>
                  {{/ifEqual}}
                  {{#ifEqual role "Reader"}}
                  <option selected>Reader</option>
                  {{else}}
                  <option>Reader</option>
                  {{/ifEqual}}
                </select>
              </td>
              <td style="padding-left: 20px;"><a href="{{id}}"><span class="glyphicon glyphicon-remove" style="color:red;"></span></a></td>
            </tr>
            {{/each}}
          </table>
        </div>
      </div>
    </script>

    <% include scripts %>
    <script type="text/javascript" src="/pagesettings.js">
    </script>
  </body>
</html>
